"""
================================================================================
ARGO ENVIRONMENT CONFIGURATION (.env.example)
================================================================================

Copy this file to .env and customize for your environment.

All values are optional. Defaults are provided for each setting.

================================================================================
LATENCY CONFIGURATION
================================================================================
"""

# Latency profile for performance tuning
# Options: FAST, ARGO, ROBUST
# Default: ARGO
ARGO_LATENCY_PROFILE=ARGO

# Enable latency profiling and reporting
# Options: true, false
# Default: false
ARGO_LATENCY_PROFILING=false

# ============================================================================
# AUDIO OUTPUT CONFIGURATION (Phase 7A-0)
# ============================================================================

# Enable audio output entirely
# If false, output is text-only
# Options: true, false
# Default: false
VOICE_ENABLED=false

# Enable Piper TTS specifically
# Requires VOICE_ENABLED=true
# Options: true, false
# Default: false
PIPER_ENABLED=false

# Path to Piper binary (Windows x64 v1.2.0)
# Must be relative to repo root or absolute path
# Default: audio/piper/piper.exe
PIPER_PATH=audio/piper/piper.exe

# Path to voice model ONNX file
# Available voices:
#   - en_US-amy-medium.onnx (female)
#   - en_US-lessac-medium.onnx (male)
# Default: audio/piper/voices/en_US-amy-medium.onnx
PIPER_VOICE=audio/piper/voices/en_US-amy-medium.onnx

# Enable timing probes for Piper audio operations
# Logs: audio_request_start, audio_first_output
# Options: true, false
# Default: false
PIPER_PROFILING=false

# ============================================================================
# STATE MACHINE CONFIGURATION (Phase 7B)
# ============================================================================

# Enable wake word detection ("ARGO")
# Transitions from SLEEP to LISTENING
# Options: true, false
# Default: true
WAKE_WORD_ENABLED=true

# Enable sleep word detection ("go to sleep")
# Transitions from any state to SLEEP
# Options: true, false
# Default: true
SLEEP_WORD_ENABLED=true

# ============================================================================
# OLLAMA CONFIGURATION
# ============================================================================

# Ollama server host
# Default: localhost
OLLAMA_HOST=localhost

# Ollama server port
# Default: 11434
OLLAMA_PORT=11434

# Ollama model name
# Default: argo (local Modelfile)
OLLAMA_MODEL=argo

# ============================================================================
# DEBUG & TESTING
# ============================================================================

# Enable debug output
# Options: true, false
# Default: false
DEBUG=false

# Suppress interactive prompts (for testing/CI)
# Options: true, false
# Default: false
NO_INTERACTIVE=false
